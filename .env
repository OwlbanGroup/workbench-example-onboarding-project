# Local Development Environment Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Application Settings
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
STREAMLIT_THEME_BASE=dark

# NVIDIA AI Workbench Integration
NVWB_API=https://api.nvidia-workbench.internal
PROXY_PREFIX=/tutorial

# Database/Cache
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=10

# Security
SECRET_KEY=+
SESSION_TIMEOUT=3600
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60
ALLOWED_DOMAINS=nvidia.com,developer.nvidia.com,forums.developer.nvidia.com

# Feature Flags
ENABLE_DEBUG_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_SECURITY_HEADERS=true

# Development Settings
AUTO_RELOAD=true
DEVELOPMENT_MODE=true
MAINTENANCE_MODE=false

# NVIDIA Environment Flags
NVIDIA_ENVIRONMENT=true
INTERNAL_DEPLOYMENT=false
