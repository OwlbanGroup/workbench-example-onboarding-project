# Local Development Environment Configuration
# Copy this to .env and customize for your local setup

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Application Settings
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
STREAMLIT_THEME_BASE=dark

# NVIDIA AI Workbench Integration (for local testing)
# Set to your local AI Workbench API or leave empty for Unix socket
NVWB_API=
PROXY_PREFIX=

# Database/Cache (for local Redis)
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=10

# Security (relaxed for development)
SECRET_KEY=dev-nvidia-tutorial-app-key-2024
SESSION_TIMEOUT=3600
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60
ALLOWED_DOMAINS=nvidia.com,developer.nvidia.com,localhost,127.0.0.1

# External Services (optional for local development)
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000

# Feature Flags
ENABLE_DEBUG_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_SECURITY_HEADERS=true

# Development-specific settings
AUTO_RELOAD=true
DEVELOPMENT_MODE=true
MAINTENANCE_MODE=false

# NVIDIA-specific configuration
NVIDIA_ENVIRONMENT=false
INTERNAL_DEPLOYMENT=false
