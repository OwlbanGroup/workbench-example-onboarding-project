# Set environment variables in the format KEY=VALUE, 1 per line
# This file will be sourced inside the project container when started.
# NOTE: If you change this file while the project is running, you must restart the project container for changes to take effect.

# Locale settings
LC_ALL=C.UTF-8

# NVIDIA AI Workbench Tutorial App Environment Variables
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Application Settings
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
STREAMLIT_THEME_BASE=dark

# NVIDIA AI Workbench Integration
# Leave NVWB_API empty to use Unix socket (/wb-svc-ro.socket)
# Set to HTTP URL for remote API access
NVWB_API=
PROXY_PREFIX=

# Database/Cache
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=10

# Security Settings
SECRET_KEY=dev-nvidia-tutorial-app-key-2024
SESSION_TIMEOUT=3600
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60
ALLOWED_DOMAINS=nvidia.com,developer.nvidia.com,localhost,127.0.0.1

# Feature Flags
ENABLE_DEBUG_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_SECURITY_HEADERS=true

# Development Settings
AUTO_RELOAD=true
DEVELOPMENT_MODE=true
MAINTENANCE_MODE=false

# NVIDIA Environment Flags
NVIDIA_ENVIRONMENT=false
INTERNAL_DEPLOYMENT=false

# NVIDIA Integration Settings (added by setup script)
NVWB_API=https://api.nvidia-workbench.internal
PROXY_PREFIX=/tutorial
SECRET_KEY=+
ALLOWED_DOMAINS=nvidia.com,developer.nvidia.com,forums.developer.nvidia.com
NVIDIA_ENVIRONMENT=true

# Local NVIDIA AI Workbench Integration (added by setup script)
LOCAL_INTEGRATION=true
WORKBENCH_SOCKET_PATH=/tmp/nvidia-workbench.sock
WORKBENCH_API_URL=http://localhost:8080
ALLOW_LOCAL_CONNECTIONS=true
SKIP_SSL_VERIFICATION=true
NVIDIA_ENVIRONMENT=true

# Local NVIDIA AI Workbench Integration (added by setup script)
LOCAL_INTEGRATION=true
WORKBENCH_SOCKET_PATH=/tmp/nvidia-workbench.sock
WORKBENCH_API_URL=http://localhost:8080
ALLOW_LOCAL_CONNECTIONS=true
SKIP_SSL_VERIFICATION=true
NVIDIA_ENVIRONMENT=true
